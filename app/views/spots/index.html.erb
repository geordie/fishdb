<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-map-marker-alt me-2"></i>Fishing Spots</h1>
        <%= link_to new_spot_path, class: "btn btn-success" do %>
          <i class="fas fa-plus me-1"></i>Add New Spot
        <% end %>
      </div>

      <% if @spots.any? %>
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th><i class="fas fa-map-marker-alt me-1"></i>Name</th>
                    <th><i class="fas fa-info-circle me-1"></i>Description</th>
                    <th><i class="fas fa-fish me-1"></i>Trips</th>
                    <th><i class="fas fa-calendar me-1"></i>Created</th>
                    <th><i class="fas fa-cogs me-1"></i>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @spots.each do |spot| %>
                    <tr>
                      <td class="fw-bold"><%= spot.name %></td>
                      <td><%= truncate(spot.description, length: 50) if spot.description.present? %></td>
                      <td>
                        <span class="badge bg-info">
                          <%= spot.trips_count %> trips
                        </span>
                      </td>
                      <td><%= spot.created_at.strftime("%B %d, %Y") %></td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to spot_path(spot), class: "btn btn-sm btn-outline-primary" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          <%= link_to edit_spot_path(spot), class: "btn btn-sm btn-outline-secondary" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                          <%= link_to spot_path(spot), class: "btn btn-sm btn-outline-danger",
                              data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this spot?"
                              } do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-map-marker-alt fa-4x text-muted mb-3"></i>
          <h3 class="text-muted">No fishing spots yet</h3>
          <p class="text-muted">Start building your spot database by adding your first fishing location.</p>
          <%= link_to new_spot_path, class: "btn btn-success btn-lg" do %>
            <i class="fas fa-plus me-2"></i>Add Your First Spot
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
