<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-map-marker-alt me-2"></i><%= @spot.name %>
          </h3>
        </div>
        <div class="card-body">
          <% if @spot.description.present? %>
            <div class="mb-4">
              <h5 class="text-muted">
                <i class="fas fa-info-circle me-2"></i>Description
              </h5>
              <p class="lead"><%= @spot.description %></p>
            </div>
          <% end %>

          <div class="row">
            <div class="col-sm-6">
              <h6 class="text-muted">
                <i class="fas fa-calendar-plus me-2"></i>Added
              </h6>
              <p><%= @spot.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <div class="col-sm-6">
              <h6 class="text-muted">
                <i class="fas fa-calendar-edit me-2"></i>Last Updated
              </h6>
              <p><%= @spot.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <%= link_to spots_path, class: "btn btn-secondary" do %>
              <i class="fas fa-arrow-left me-1"></i>Back to Spots
            <% end %>
            <div>
              <%= link_to edit_spot_path(@spot), class: "btn btn-primary me-2" do %>
                <i class="fas fa-edit me-1"></i>Edit
              <% end %>
              <%= link_to spot_path(@spot), method: :delete, class: "btn btn-danger", 
                  confirm: "Are you sure you want to delete this spot?" do %>
                <i class="fas fa-trash me-1"></i>Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
