<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Fishing Trips</h1>
  <%= link_to "New Fishing Trip", new_fishing_trip_path, class: "btn btn-primary" %>
</div>

<% if @fishing_trips.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Date</th>
          <th>Fish Caught</th>
          <th>Notes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @fishing_trips.each do |trip| %>
          <tr>
            <td><%= trip.date.strftime("%B %d, %Y") %></td>
            <td>
              <span class="badge bg-<%= trip.fish > 0 ? 'success' : 'secondary' %>">
                <%= trip.total_fish_display %>
              </span>
            </td>
            <td>
              <% if trip.notes.present? %>
                <div class="text-truncate" style="max-width: 200px;" title="<%= strip_tags(trip.notes) %>">
                  <%= truncate(strip_tags(trip.notes), length: 50) %>
                </div>
              <% else %>
                <span class="text-muted">No notes</span>
              <% end %>
            </td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to "View", trip, class: "btn btn-outline-primary btn-sm" %>
                <%= link_to "Edit", edit_fishing_trip_path(trip), class: "btn btn-outline-secondary btn-sm" %>
                <%= link_to "Delete", trip, method: :delete, 
                    class: "btn btn-outline-danger btn-sm",
                    confirm: "Are you sure?",
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure you want to delete this fishing trip?"
                    } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-5">
    <div class="mb-3">
      <i class="fas fa-fish fa-3x text-muted"></i>
    </div>
    <h3 class="text-muted">No fishing trips yet</h3>
    <p class="text-muted">Start tracking your fishing adventures!</p>
    <%= link_to "Add Your First Trip", new_fishing_trip_path, class: "btn btn-primary" %>
  </div>
<% end %>
